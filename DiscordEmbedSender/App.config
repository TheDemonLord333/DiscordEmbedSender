<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>

	<appSettings>
		<!-- Discord Bot API Configuration -->
		<add key="BotApiBaseUrl" value="http://localhost:3000" />
		<add key="ConnectionTimeout" value="30" />
		<add key="MaxRetryAttempts" value="3" />

		<!-- UI Configuration -->
		<add key="DefaultEmbedColor" value="#3498db" />
		<add key="AutoSavePreferences" value="true" />
		<add key="ShowPreviewByDefault" value="false" />

		<!-- Validation Settings -->
		<add key="MaxEmbedTitleLength" value="256" />
		<add key="MaxEmbedDescriptionLength" value="4096" />
		<add key="MaxEmbedFooterLength" value="2048" />
		<add key="MaxEmbedAuthorLength" value="256" />
		<add key="MaxEmbedFieldNameLength" value="256" />
		<add key="MaxEmbedFieldValueLength" value="1024" />
		<add key="MaxEmbedFields" value="25" />
		<add key="MaxEmbedTotalLength" value="6000" />

		<!-- Feature Flags -->
		<add key="EnableAdvancedFeatures" value="true" />
		<add key="EnableLogging" value="true" />
		<add key="LogLevel" value="Information" />
	</appSettings>

	<system.net>
		<settings>
			<httpWebRequest useUnsafeHeaderParsing="true" />
		</settings>
	</system.net>
</configuration>